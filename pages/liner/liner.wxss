/* pages/liner/liner.wxss */
/*导航栏*/
.choose{
  display:flex;
  justify-content: space-around;
  padding:20rpx 0;
  border-bottom: 1rpx solid #bbb;
}
.block{
  position:relative;
  font-size:14px;
  text-align:center;
}
.sj{
 
  height:10rpx;
  border-top: 10rpx solid grey;
  border-left: 10rpx solid #fff;
  border-right: 10rpx solid #fff;
  border-bottom: 10rpx solid #fff;
  position:absolute;
  top:15rpx;
  left:65rpx;
}
.active{
  color: #f00;
}
.choose .active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #f00;
}
.fl_content{
  position:absolute;
  background:white;
  z-index:999;
  width:100%;
  padding:0 30rpx;
  height:300rpx;
  overflow: auto;
}
.f1{
  height:80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  border-bottom: 1rpx solid #aaa;
  padding:0 50rpx;

}
.f1 text{
  font-size: 14px;
  text-align:center;
  color:#aaa
}
/*产品内容*/
.list{
  padding:30rpx;
  position:relative;
  height: 220rpx;
  border-bottom: 1rpx solid #ddd;
}
image{
  width:200rpx;
  height:200rpx;
  position:absolute;
}
.mask{
  position: absolute;
  width:200rpx;
  height:60rpx;
  background: rgba(29, 28, 28,.4);
  top:170rpx;
  text-align: center;
}
.mask text{
  font-size:13px;
  color:#fff;
}
.desc{
  position: absolute;
  top:20rpx;
  left:260rpx;
  line-height: 40rpx;
}
.title{
  display: flex;
  font-size: 13px;
  margin-right:30rpx;
}
.type{
  color:#aaa;
  font-size: 12px;
}
.classify{
  width:100%;
  display: flex;
}
.dang{
  border: 1rpx solid #dd86f3af;
  border-radius: 10rpx;
  margin:0 10rpx;
  padding:0 10rpx;
}
.dang text{
  font-size: 13px;
  color:#dd86f3af;
}
.price{
  color:red;
  font-weight: lighter;
  font-size: 15px;

}
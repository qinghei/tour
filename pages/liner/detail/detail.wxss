/* pages/liner/detail/detail.wxss */
image{
  height:320rpx;
  width:100%;
}
.detail{
  padding:5rpx 25rpx;
}
.detail .title{
  font-size: 15px;
}
.dest text:first-child{
  color:#aaa;
  font-size:12px;
  margin-right:250rpx;
}
.dest text:last-child{
  background: red;
  color:#fff;
  border-radius: 10rpx;
  padding:5rpx 10rpx;
  font-size: 13px;
}
.price{
  color: #f00;
  font-size: 16px;
  margin-top:10rpx;
}
.classify text{
  color:rgb(141, 131, 131);
  border: 1px solid #aaa;
  border-radius: 10rpx;
  padding:5rpx 10rpx;
  font-size: 12px;
  margin:0 5rpx;
}
button{
  width: 15%;
  font-size: 12px;
  color:#fff;
  background: red;
  height:50rpx;
  line-height: 50rpx;
  margin-right:10rpx;
  margin-top:-45rpx;
}
.share{
  font-size: 11px;
  float:right;
  margin-top:-40rpx;
}
.share image{
  height:60rpx;
  width:60rpx;
}
/*舱房选择*/
.choose,.traffic{
  font-size: 15px;
}
.choose image,.traffic image{
  width:40rpx;
  height:40rpx;
  margin-right: 20rpx;
  margin-top:20rpx;
}
.inner{
  padding:25rpx 0;
  border-top:1px solid #ddd;
  border-bottom:1px solid #ddd;
  margin-top: 20rpx;
}
.name{
  font-size: 14px;
}
.price1{
  color:orange;
  padding:0 125rpx;
}
.outer{
  margin-top:20rpx;
}
/*图文介绍*/
.pic{
  margin-top:20rpx;
  font-size: 15px;
  border-bottom:1px solid #ddd;
  padding-bottom:20rpx;
}
.desc image{
  width:100%;
  height: 1000rpx;
}
/*交通信息*/
.moren{
  border: 1rpx solid rgb(96, 87, 182);
  background: rgb(96, 87, 182);
  color:#fff;
  border-radius: 30rpx;
  padding:10rpx 10rpx;
  width:20%;
  margin:30rpx 0 20rpx 0;
  text-align: center;
}
.xiang{
  height:360rpx;
  background: #f1f1f1;
  border-radius: 20rpx;
  padding:20rpx;
}
.xiang .go{
  border-bottom: 1rpx dashed #ddd;  
}
.go .text{
  background: green;
  color: #fff;
  padding:10rpx;
  border-radius: 10rpx;
}
.back .text{
  background: orangered;
  color: #fff;
  padding:10rpx;
  border-radius: 10rpx;
}
.go image,.back image{
  width:60rpx;
  height:60rpx;
  margin-left: 20rpx;
  margin-bottom:-18rpx;
}
.time{
  color:rgb(96, 87, 182);
  font-size: 22px;
  margin-top:25rpx;
  font-weight: lighter;
  padding-bottom: 40rpx;
}
.time .heng{
  font-size: 14px;
  border-bottom: 1rpx solid #aaa;
  padding-bottom: 16rpx;
  width:150rpx;
  height:1rpx;
  display: inline-block;
  margin:0 150rpx;
  position: relative;
}
.time .heng text:first-child{
  position: absolute;
  top:-35rpx;
  text-align: center;
  left:50rpx;
  color:#aaa;
}
.time .heng text:last-child{
  position: absolute;
  right:0
}
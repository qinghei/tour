/* pages/liner/detail/reserve/orderdetail/orderdetail.wxss */
.title{
  font-size: 15px;
}
.routing{
  margin-top:20rpx;
  height:200rpx;
  padding:20rpx;
  background: #f1f1f1;
  border-radius: 20rpx;
}
.type{
  text-align: center;
  font-size: 15px;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
}
.detail{
  font-size: 13px;
  color:#aaa;
  padding:0 80rpx;
}
.detail text{
  position: relative;
  top:-25rpx;
}
.detail image{
  width:60rpx;
  height:60rpx;
  margin:0 120rpx;
  margin-top:30rpx;
}
/*订单信息*/
.cell-item{
  color:#aaa;
  font-size: 13px;
}
.cell-item text{color:#000; margin-left:50rpx;}
.info{
  margin-top:15rpx;
  font-size: 15px;
  color:#000;
}
/*出行人*/
.person input{
  display: inline-block;
  margin-left:30rpx;
  font-size: 12px;
  margin-bottom:-18rpx;
}
.num{
  margin:25rpx;
  color:#aaa;
  font-size: 13px;
}
.num text{
  color:#000;
  margin-left:86rpx;
}
/*订单栏*/
.tip{
  font-size: 15px;
  margin-top:15rpx;
  padding-left:30rpx;
}
.tip text{
  margin:0 15rpx auto 20rpx;
  color:orange;
}
.tip button{
  margin-right:0;
  background: red;
  color:#fff;
  width:25%;
  font-size: 12px;
 
}
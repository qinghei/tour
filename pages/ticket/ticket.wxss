/* pages/ticket/ticket.wxss */

.list{
  padding:30rpx;
  position:relative;
  height: 200rpx;
  border-bottom: 1rpx solid #ddd;
}
image{
  width:200rpx;
  height:200rpx;
  position:absolute;
}
.mask{
  position: absolute;
  width:200rpx;
  height:60rpx;
  background: rgba(29, 28, 28,.4);
  top:170rpx;
  text-align: center;
}
.mask text{
  font-size:13px;
  color:#fff;
}
.desc{
  position: absolute;
  top:20rpx;
  left:260rpx;
  line-height: 80rpx;
}
.title{
  font-size: 15px;
}
.dang{
  width:120rpx;
  height:50rpx;
  border: 1rpx solid #dd86f3af;
  border-radius: 10rpx;
  line-height: 43rpx;
  text-align: center;
}
.dang text{
  font-size: 13px;
  color:#dd86f3af;
}
.price{
  color:red;
  font-weight: lighter;
  font-size: 15px;

}